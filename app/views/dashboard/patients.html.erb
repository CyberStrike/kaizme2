<h1>Patient Dashboard</h1>

<h2>My Appointments</h2>
<!-- displays availability scheduler on the dashboard page -->
<%#= (render partial: 'appointments/form') %>
<table>
  <thead>
    <tr>
      <th>Provider Name</th>
      <!-- <th>Patient</th> -->
      <th>Start</th>
      <th>End</th>
      <th>Session</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.provider.user.first_name %></td>
        <td><%= appointment.provider.user.last_name %></td>
        <!-- <td><%#= appointment.provider.user.email %></td> -->
        <!-- <td><%#= appointment.patient.user.email %></td> -->
        <td><%= appointment.start.strftime('%a, %b %d %I:%M %p') %></td>
        <td><%= appointment.end.strftime('%a, %b %d %I:%M %p') %></td>
      </tr>
      <tr>
         <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><% if appointment.session %>
          <%= link_to "Join Session",  tok_view_path(appointment.session) %>
        <% end %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<br>
<p></p>
