
<script type="text/javascript">
$(function() {
  $('#create-session').click(function (event) {
    $.ajax({
      url: "new",
      type: "GET",
      async: false
    })
    .done(function() {
      location.reload();
    });
    event.preventDefault(); // Prevent link from following its href
  });
});
</script>
<% @sessions.each do |session| %>
  Session ID: <%= session.id %>
  <%= link_to "Join", "#{session.id}", method: :get %>
  <%= link_to "Close", "#{session.id}/close", method: :get %>

    <br>
<% end %>
<% if user_signed_in? && current_user.is_provider %>
<%= link_to "Create", "new", :id => "create-session" %>
<% end %>
